<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Labory</title>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>

    <%= render 'shared/open_graph' %>
  </head>
  <body class="site stafftools <%= controller_name %> <%= action_name %>">
    <div class="loading-indicator" style="display: none;"></div>

    <%= render 'peek/bar' %>
    <%= render 'shared/header' %>

    <main>
      <%= render 'shared/flash_messages' %>

      <div class="page-content container">
        <div class="classroom-head">
          <%= link_to edit_stafftools_classroom_path(@classroom), class: 'right btn btn-sm' do %>
            <%= octicon('repo-forked') %>
            Fork
          <% end %>
          <h1>
            <%= octicon('terminal') %>
            <%= link_to 'Classrooms', stafftools_classrooms_path %><span class="path-divider">/</span><%= link_to @classroom.title, stafftools_classroom_path(@classroom), class: 'text-bold' %>
          </h1>
        </div>
        <%= render 'stafftools/classrooms/classroom_navigation' %>
        <%= yield %>
      </div>

    </main>

    <%= render 'shared/footer' %>

   <div class="facebox" id="facebox" style="display:none;">
    <div class="facebox-popup">
      <div class="facebox-content" role="dialog" aria-labelledby="facebox-header" aria-describedby="facebox-description">
      </div>
      <button type="button" class="facebox-close js-facebox-close" aria-label="Close modal">
        <%= octicon('x') %>
      </button>
    </div>
  </div>

