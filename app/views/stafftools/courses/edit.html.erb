<div class="subhead">
  <h2 class="subhead-heading">Module Settings for <%= @course.title %></h2>
</div>
<%= form_for [:stafftools, @course] do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= render partial: 'stafftools/courses/course_form_options', locals: { f: f } %>

  <%= f.submit 'Save changes', class: 'btn btn-primary', id: 'course_submit' %>
  <%= link_to 'Cancel', [:stafftools, @course], class: 'btn', role: 'button' %>
<% end %>

<hr>

<div class="boxed-group dangerzone">
  <h3>Danger Zone</h3>

  <div class="boxed-group-inner">
    <button type="button" data-facebox="#delete_module_confirm" data-facebox-class="dangerzone" class="btn btn-danger boxed-action">Delete this repository</button>

    <h4>Delete this module</h4>
    <p>Once you delete this module, there is no going back. Please be certain.</p>

    <%= render partial: 'stafftools/courses/delete_module_modal' %>
  </div>
</div>