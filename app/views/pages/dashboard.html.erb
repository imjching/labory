<div class="columns">
  <div class="three-fourths column centered">

    <div class="boxed-group">
      <h3>Classrooms</h3>

      <% if @classroom_accesses.present? %>

        <div class="boxed-group-inner">
          <ul class="boxed-group-list boxed-group-standalone">
            <%= render @classroom_accesses %>
          </ul>
        </div>

      <% else %>

        <div class="boxed-group-inner">
          <div class="blankslate blankslate-fixed-width">
            <h3>You are not in any classrooms yet.</h3>
            <p>Please contact your instructor so that he or she adds you in the classroom.</p>
          </div>
        </div>

      <% end %>
    </div>

  </div>
</div>

