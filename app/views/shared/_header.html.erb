<div class="header header-logged-in true" role="banner">
  <div class="container clearfix">
    <a class="header-logo-invertocat" href="https://github.com/">
      <svg aria-hidden="true" class="octicon octicon-mark-github" height="28" role="img" version="1.1" viewBox="0 0 206.793 206.793" width="28">
        <%= render 'shared/svg_logo_path' %>
      </svg>
    </a>


    <ul class="header-nav left" role="navigation">
      <li class="header-nav-item">
        <%= link_to 'Home', (logged_in? ? dashboard_path : root_path), class: 'header-nav-link' %>
      </li>
      <li class="header-nav-item">
        <a href="https://github.com" class="header-nav-link">GitHub</a>
      </li>
      <li class="header-nav-item">
        <a class="header-nav-link" href="https://gist.github.com/">Gist</a>
      </li>
    </ul>


  <ul class="header-nav user-nav right" id="user-links">
    <% if logged_in? %>
      <li class="header-nav-item">
        <%= link_to decorated_current_user.github_url, class: 'header-nav-link notification-indicator tooltipped tooltipped-s', 'aria-label' => 'View GitHub profile' do %>
          <%= image_tag decorated_current_user.avatar_url(40), class: 'avatar', alt: "@#{decorated_current_user.login}", height: 20, width: 20 %>
        <% end %>
      </li>
      <li class="header-nav-item">
        <%= link_to logout_path, method: :post, class: 'header-nav-link tooltipped tooltipped-s', 'aria-label' => 'Sign out' do %>
          <%= octicon('sign-out') %>
        <% end %>
      </li>

    <% else %>
      <li class="header-nav-item"><%= link_to 'Sign in', login_path, class: 'header-nav-link' %></li>
    <% end %>
  </ul>
  </div>
</div>